<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="fill_vertical|fill_horizontal|center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="top|bottom|left|fill_vertical|fill_horizontal"
        android:layout_weight="0"
        android:orientation="vertical" >

        <Button
            android:id="@+id/bn_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|bottom|left|right"
            android:layout_weight="0.25"
            android:text="Menu" />

        <Button
            android:id="@+id/bn_calibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|bottom|left|right"
            android:layout_weight="0.25"
            android:text="CAL" />

        <Button
            android:id="@+id/bn_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|bottom|left|right"
            android:layout_weight="0.25"
            android:text="APP" />

        <Button
            android:id="@+id/bn_power"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_weight="0.25"
            android:text="On/Off" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|bottom|right|fill_vertical|fill_horizontal"
        android:layout_weight="0"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LinearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|bottom|fill_vertical|fill_horizontal"
            android:layout_weight="0.8"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_main_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="None"
                android:textSize="@dimen/activity_vertical_margin" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical|fill_horizontal"
            android:layout_weight="0.1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bn_zero"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:text="-0-" />

            <Button
                android:id="@+id/bn_tare"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:text="-T-" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>